<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem.LinearLayout">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/album_imageview"
        style="@style/ListItem.ImageView" />

    <LinearLayout
        style="@style/ListItem.TrackTextLinearLayout"
        android:orientation="vertical">

        <TextView
            android:text="@string/track_name_placeholder"
            android:id="@+id/track_textview"
            style="@style/ListItem.TextView.TrackTextView" />

        <TextView
            android:text="@string/album_name_placeholder"
            android:id="@+id/album_textview"
            style="@style/ListItem.TextView.TrackTextView" />

    </LinearLayout>

</LinearLayout>
